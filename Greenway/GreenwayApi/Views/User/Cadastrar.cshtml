@model User
@{
	ViewData["Title"] = "Cadastro de Usuários";
}

<section class="section-cadastrar-greenway">
    <h1>Cadastro de <span class="slogan-home">Usuários</span></h1>

    <div class="content-alert-sucess" id="content-alert-sucess">
        <p id="alert-message">@TempData["msg"]</p>
    </div>

    <form asp-action="cadastrar" class="form-content-greenway">
        <partial name="_Form" />
        <div class="form-content-button">
            <button type="submit" class="button-input" onclick="showConfirmOverlay()">Cadastrar Usuário</button>
            <a asp-action="index" class="button-input">Lista de Usuários</a>
        </div>
    </form>
</section>
